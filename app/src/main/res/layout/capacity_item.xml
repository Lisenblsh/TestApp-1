<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/background_block"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:src="@drawable/block"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="?attr/colorSecondary"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/capacity_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/background_block"
        app:layout_constraintBottom_toBottomOf="@id/background_block"
        app:layout_constraintStart_toStartOf="@id/background_block"
        app:layout_constraintEnd_toEndOf="@id/background_block"
        android:gravity="center"
        android:textColor="@color/grey"
        tools:text="123 Gb"/>

</androidx.constraintlayout.widget.ConstraintLayout>