<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/background_category"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="200dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/icon_category"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:elevation="30dp"
        tools:src="@drawable/icon_phone_category"
        app:layout_constraintStart_toStartOf="@id/background_category"
        app:layout_constraintTop_toTopOf="@id/background_category"
        app:layout_constraintEnd_toEndOf="@id/background_category"
        app:layout_constraintBottom_toBottomOf="@id/background_category"
        tools:tint="@color/white" />

    <TextView
        android:id="@+id/title_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="?attr/colorSecondary"
        tools:text = "Phones"
        app:layout_constraintStart_toStartOf="@id/background_category"
        app:layout_constraintEnd_toEndOf="@id/background_category"
        app:layout_constraintTop_toBottomOf="@id/background_category"/>


</androidx.constraintlayout.widget.ConstraintLayout>